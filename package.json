{
  "name": "slack-dify-bridge",
  "version": "1.0.0",
  "description": "Lightweight Slack-Dify bridge using Socket Mode for stable private channel support",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "echo \"No tests yet\"",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "slack",
    "dify",
    "bot",
    "socket-mode",
    "ai",
    "chatbot"
  ],
  "author": "ijuinryukichi",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}